  <script>
    /* Automatically fill 'Date last modified' from document metadata (so programmer doesn't manually change it).
       If document.lastModified is unavailable, fall back to current time. */
    (function(){
      const lmEl = document.getElementById('last-modified');
      const raw = document.lastModified;
      let display;
      if (raw && raw !== "") {
        // Use the browser-provided lastModified; convert to local-readable format.
        try {
          const dt = new Date(raw);
          display = dt.toLocaleString();
        } catch (e) {
          display = raw;
        }
      } else {
        // Fallback: current timestamp (useful when testing locally)
        display = new Date().toLocaleString();
      }
      lmEl.textContent = 'Date last modified: ' + display;

      // small convenience: current year
      document.getElementById('year').textContent = new Date().getFullYear();
    })();
  </script>
